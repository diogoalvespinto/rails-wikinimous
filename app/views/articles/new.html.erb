<div class="wrapper m-5">
<h1>New article</h1>
<%= form_with model: @article do |form| %>
  <%= form.label :title%>
  <%= form.text_field :title, class: "form-control mt-1" %>
  <%= form.label :content %>
  <%= form.text_field :content, class: "form-control mt-1" %>
  <%= form.submit class:"btn btn-primary mt-3"%>
<% end %>
<%= link_to "Back to my articles", articles_path %>
</div>
